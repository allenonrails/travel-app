<div class="h-screen w-full flex flex-col bg-gray-50 p-4">
  <p style="color: green"><%= notice %></p>

  <h1 class="text-4xl text-gray-800 font-semibold">Trips</h1>

  <div id="trips">
    <% @trips.each do |trip| %>
      <%= render trip %>
      <p>
        <%= link_to "Show this trip", trip %>
      </p>
    <% end %>
  </div>

  <%= link_to "New trip", new_trip_path %>
</div>

