= form_with(model: trip) do |form|
  - if trip.errors.any?
    %div{:style => "color: red"}
      %h2
        = pluralize(trip.errors.count, "error")
        prohibited this trip from being saved:
      %ul
        - trip.errors.each do |error|
          %li= error.full_message
  .flex.flex-col
    = form.label :purpose
    = form.rich_text_area :purpose
  .flex.flex-col
    = form.label :places
    = form.select :places, @places, {}, { multiple: false }
  %div
    = form.submit class: 'mt-5 bg-indigo-500 hover:bg-indigo-400 text-white font-bold |
      py-2 px-4 border-b-4 border-indigo-700 hover:border-indigo-500 rounded          |
      cursor-pointer'                                                                 |
